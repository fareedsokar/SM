public class ViewResponseController implements Initializable{
  private TextField reportanswer;
//	private TextField successmessage="Your Answers has b";
	
public void GetReportAnswer(Request r)
  {
		Alert alert = new Alert(AlertType.CONFIRMATION);
		alert.setTitle("Response Dialog ");
		alert.setHeaderText("Look, Are you sure you wanna see the answer?");
	        
		if (r.isAccepted()){
			System.out.print("Your message has been accepted ");
		}
		else 
			
			System.out.print("Your message has not been accepted ");

  }
	
  
@Override
public void initialize(URL arg0, ResourceBundle arg1) {
	Date d=new Date(17,5,123); 
	Request r=new Request(123,125,"deletingmyself","i hate u",d,false); 
     r.setAccepted(true);
	GetReportAnswer(r);
	// TODO Auto-generated method stub 
}
public void start(Stage primaryStage) throws Exception {	
	Parent root = FXMLLoader.load(getClass().getResource("/Student/ViewResponseGUI.fxml"));
			
	Scene scene = new Scene(root);
	scene.getStylesheets().add(getClass().getResource("/Student/ViewResponseController.css").toExternalForm());
	primaryStage.setTitle("Response manegment");
	primaryStage.setScene(scene);
	primaryStage.show();		
}
}
